{
  "manifest_version": 3,

  "name": "Exam Solver Extension",
  "description": "A Browser Extension that uses AI to solve online exams",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "clipboardWrite", "contextMenus", "nativeMessaging","cookies","notifications"],

  "host_permissions": ["<all_urls>"]
}
